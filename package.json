{
  "name": "javascript_project_starter_kit_webpack",
  "version": "1.0.0",
  "description": "A starter kit for JavaScript project using webpack",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "production": "NODE_ENV=production webpack",
    "dev": "webpack serve --mode=development & webpack --mode development",
    "test": "jest",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:html": "hint \"**/*.html\"",
    "lint:js": "eslint \"**/*.{js,jsx}\"",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.html": [],
    "*.{css,scss}": [],
    "*.{js,jsx}": [],
    "*.md": []
  },
  "keywords": [
    "JavaScript",
    "Webpack",
    "New Project",
    "Starter Kit"
  ],
  "author": {
    "name": "Kola Kolade",
    "email": "kolakolade@gmail.com",
    "url": "https://kkolade.github.io/kolakolade.me/"
  },
  "homepage": "https://github.com/kkolade/github.io/kolakolade.me",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.51.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-webpack-plugin": "^4.0.1",
    "favicons": "^7.1.4",
    "favicons-webpack-plugin": "^6.0.1",
    "file-loader": "^6.2.0",
    "gh-pages": "^6.0.0",
    "hint": "^7.1.10",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "node-sass": "^9.0.0",
    "postcss": "^8.4.31",
    "sass": "^1.69.2",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.10.3",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-csstree-validator": "^3.0.0",
    "stylelint-scss": "^5.2.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "tsparticles": "^2.12.0",
    "typewriter-effect": "^2.21.0"
  }
}
