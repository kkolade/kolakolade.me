{
  "extends": ["stylelint-config-sass-guidelines"],
  "plugins": ["stylelint-scss", "stylelint-csstree-validator"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "forward",
          "use",
          "@function",
          "@return",
          "@mixin",
          "@include",
          "@extend"
        ]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "forward",
          "use",
          "@function",
          "@return",
          "@mixin",
          "@include",
          "@extend"
        ]
      }
    ],
    "max-nesting-depth": 3
  },
  "ignoreFiles": [
    "build/**",
    "dist/**",
    "**/reset*.css",
    "**/bootstrap*.css",
    "**/*.js",
    "**/*.jsx",
    "src/assets/scss/_base.scss"
  ]
}
